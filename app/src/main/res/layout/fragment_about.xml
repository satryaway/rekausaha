<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/toolbar_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/toolbar_icon"
                android:layout_width="171dp"
                android:layout_height="96dp"
                android:layout_centerInParent="true"
                android:src="@drawable/reka" />

            <TextView
                android:id="@+id/version_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:text="@string/app_version"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/toolbar_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:src="@drawable/toolbar_bottom" />

        <ImageView
            android:layout_width="171dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/illustration" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="-20dp"
            android:text="@string/app_description" />

        <LinearLayout
            android:id="@+id/hyperlink_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="128dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="36dp"
                android:src="@drawable/planet_earth" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="36dp"
                android:src="@drawable/ic_like" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_email" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>