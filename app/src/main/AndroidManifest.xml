<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jixstreet.rekatoursandtravel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.jixstreet.rekatoursandtravel.RekaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jixstreet.rekatoursandtravel.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jixstreet.rekatoursandtravel.activity.ListPaymentActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.activity.PaymentActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.activity.ListOrderActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.activity.MainActivity" />

        <!-- flight -->
        <activity android:name="com.jixstreet.rekatoursandtravel.flight.activity.FilterActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.flight.activity.AirportChooserActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.flight.activity.FlightActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.flight.activity.DepartureActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.flight.activity.ArrivalActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.flight.activity.OrderFlightActivity" />
        <activity
            android:name="com.jixstreet.rekatoursandtravel.flight.activity.InfoPassangerActivity"
            android:windowSoftInputMode="stateHidden" />

        <!-- hotel -->
        <activity
            android:name="com.jixstreet.rekatoursandtravel.hotel.activity.HotelActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.ChooserHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.ListHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.SortirHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.FilterHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.ProfileHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.RoomHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.OrderHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.hotel.activity.InfoCustomerHotelActivity" />
        <activity android:name="com.jixstreet.rekatoursandtravel.CheckoutPaymentActivity" />
    </application>

</manifest>